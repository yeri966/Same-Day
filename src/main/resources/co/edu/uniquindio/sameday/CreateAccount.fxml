<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="550.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.sameday.controllers.CreateAccountController">

    <center>
        <AnchorPane prefHeight="550.0" prefWidth="500.0" style="-fx-background-color: #f5f5f5;" BorderPane.alignment="CENTER">
            <children>
                <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="100.0" prefWidth="500.0" style="-fx-background-color: #2196F3;">
                    <children>
                        <Label layoutX="120.0" layoutY="25.0" text="CREAR NUEVA CUENTA" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label layoutX="150.0" layoutY="60.0" text="Sistema de Logística SameDay" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>

                <AnchorPane layoutX="50.0" layoutY="120.0" prefHeight="380.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <children>
                        <Label layoutX="20.0" layoutY="20.0" text="Nombre Completo:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtNombre" layoutX="20.0" layoutY="42.0" prefHeight="30.0" prefWidth="360.0" promptText="Ingrese su nombre completo" />

                        <Label layoutX="20.0" layoutY="82.0" text="Correo Electrónico:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtCorreo" layoutX="20.0" layoutY="104.0" prefHeight="30.0" prefWidth="360.0" promptText="ejemplo@correo.com" />

                        <Label layoutX="20.0" layoutY="144.0" text="Teléfono:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtTelefono" layoutX="20.0" layoutY="166.0" prefHeight="30.0" prefWidth="360.0" promptText="3001234567" />

                        <Label layoutX="20.0" layoutY="206.0" text="Dirección:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtDireccion" layoutX="20.0" layoutY="228.0" prefHeight="30.0" prefWidth="360.0" promptText="Calle 123 #45-67" />

                        <Label layoutX="20.0" layoutY="268.0" text="Usuario:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtUsuario" layoutX="20.0" layoutY="290.0" prefHeight="30.0" prefWidth="360.0" promptText="Nombre de usuario" />

                        <Label layoutX="20.0" layoutY="330.0" text="Contraseña:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="txtContrasenia" layoutX="20.0" layoutY="352.0" prefHeight="30.0" prefWidth="360.0" promptText="Mínimo 4 caracteres" />
                    </children>
                </AnchorPane>

                <Button fx:id="btnRegistrar" layoutX="80.0" layoutY="510.0" mnemonicParsing="false" onAction="#onRegistrar"
                        prefHeight="35.0" prefWidth="160.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="REGISTRAR">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>

                <Button fx:id="btnCancelar" layoutX="260.0" layoutY="510.0" mnemonicParsing="false" onAction="#onCancelar"
                        prefHeight="35.0" prefWidth="160.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="CANCELAR">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </center>
</BorderPane>